@model IPagedList<Model.FAQ>
@using PagedList;
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Tech/Views/Shared/_LayoutTrouble.cshtml";
}

<h2>@StaticResource.Resource.faq</h2>
<br />

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">
                @StaticResource.Resource.idFAQ
            </th>
            <th scope="col">
                @StaticResource.Resource.question
            </th>
            <th scope="col">
                @StaticResource.Resource.ans
            </th>
            <th scope="col">
                @StaticResource.Resource.right
            </th>
            <th scope="col">
                @StaticResource.Resource.count
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr onclick="window.location.href='/FAQ/Detail/@item.id_FAQ'">
                <td>
                    @Html.DisplayFor(modelItem => item.id_FAQ)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.question)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.answer)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.rightt)*@
                    <i class="@ViewData["role-icon-" + item.rightt]"></i>
                    <span style="padding-left: 5px">@ViewData[item.rightt.ToString()]</span>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.countt)
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a class="icon" href=@Url.Action("SuggestionFAQ", "FAQ")>
        <i class="fas fa-plus-square"></i>
        <span class="tooltiptext">@StaticResource.Resource.request</span>
    </a>
</div>

@Html.PagedListPager(Model, index => Url.Action("Index", "FAQ", new { index }))
