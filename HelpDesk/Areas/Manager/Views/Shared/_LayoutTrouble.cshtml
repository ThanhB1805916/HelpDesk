    <nav class="navbar navbar-inverse navbar-fixed-top">
        <a class="navbar-brand" href="@Url.Action("Index", "Trouble", new { area = "Manager" })">
            Online Help Desk
        </a>

        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>

        <div class="navbar-collapse collapse">
            <ul class="navbar-nav navbar-right mr-auto">


                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("ChangeCulture", "Base", new { ddlCulture = "vi", returnUrl = Request.Url.ToString() })">
                        <img src="~/Assets/icon/vietnam.png" style="padding-right:3px" />
                        @StaticResource.Resource.Vietnamese
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("ChangeCulture", "Base", new { ddlCulture = "en", returnUrl = Request.Url.ToString() })">
                        <img src="~/Assets/icon/united-states.png" style="padding-right:3px" />
                        @StaticResource.Resource.English
                    </a>
                </li>
                
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Logout", "Authentication", new { area = "" })">
                        <i class="fas fa-sign-out-alt"></i>
                        @StaticResource.Resource.logout
                    </a>
                </li>
            </ul>

        </div>
    </nav>

    <div class="list-group" style="width: 17%; height: 100%; overflow:auto; position: fixed; background-color: #f5f6fa">
        @*<a class="btnc" href=@Url.Action("Insert", "Trouble", new { Area = ""})>
            <div class="textc">@StaticResource.Resource.newReport</div>
        </a>*@
        <div style="padding-top: 15px; padding-bottom: 7px; padding-left: 5px">
            <a class="btnc" href=@Url.Action("Insert", "Trouble", new { Area = ""})>
                <div class="textc">@StaticResource.Resource.newReport</div>
            </a>
        </div>
        <a class="list-group-item list-group-item-action icon @ViewData["Trouble"]" href="/Manager/Trouble">
            <i class="fas fa-tasks"></i>
            <b style="padding-left: 5px; display:inline">@StaticResource.Resource.manageTrouble</b>
            <span id="newTrouble" class="badge" style="display:inline; background-color: #e74c3c; font-size: 12px; color: aliceblue"></span>
        </a>

        <a class="list-group-item list-group-item-action icon @ViewData["Staff_Trouble"]" href=@Url.Action("Index", "Trouble", new { Area = ""})>
            <i class="fas fa-file-alt"></i>
            <b style="padding-left:5px">@StaticResource.Resource.myTrouble</b>
        </a>
        @*<a class="list-group-item list-group-item-action icon" href=@Url.Action("Insert", "Trouble", new { Area = ""})>
            <i class="fas fa-file-medical"></i>
            <span style="padding-left: 3px">Add Trouble</span>
        </a>*@
        <a class="list-group-item list-group-item-action icon @ViewData["Personal"]" href=@Url.Action("Index", "Personal", new { Area = "Manager"})>
            <i class="fas fa-users"></i>
            <b style="padding-left:5px">@StaticResource.Resource.manageUser</b>
        </a>
        <a class="list-group-item list-group-item-action icon @ViewData["FAQ"] @ViewData["Staff_FAQ"]" href=@Url.Action("Index", "FAQ", new { Area = "Manager" })>
            <i class="fas fa-question-circle"></i>
            <b style="padding-left:5px">@StaticResource.Resource.faq</b>
        </a>
        <a class="list-group-item list-group-item-action icon @ViewData["Staff_Account"]" href="@Url.Action("AccountInfo", "Account", new { Area = ""})">
            <i class="fas fa-key"></i>
            <b style="padding-left:5px">@StaticResource.Resource.account</b>
        </a>
    </div>


    <div class="container body-content" style="margin-left: 17%; width: 83%">
        @Html.Hidden("Get", Url.Action("Get", "Trouble", new { area = "Manager" }))
        @RenderBody()
        <hr />
        <footer class="card-footer text-muted">
            <p>&copy; @DateTime.Now.Year Online Helpdesk System</p>
        </footer>
    </div>




    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Assets/ckfinder/ckfinder.js"></script>
    <script src="~/Scripts/jquery.signalR-2.4.1.min.js"></script>
    <script src='~/signalr/js'></script>
    <script src="~/signalr/hubs"></script>
    <script src="~/Scripts/SignalR.js"></script>
    @*<script>
        $(".list-group a").on("click", function (e) {
            
            $(".list-group a").removeClass("active");
            $(this).addClass("active");
            
           
        });

    </script>*@
    @RenderSection("jsFooter", required: false)
    @RenderSection("scripts", required: false)


</body>
</html>
