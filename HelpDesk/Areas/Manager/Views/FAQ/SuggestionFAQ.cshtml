@model IEnumerable<Model.FAQ>

@{
    ViewBag.Title = "Suggestion FAQ";
    Layout = "~/Areas/Manager/Views/Shared/_LayoutTrouble.cshtml";
}

<h2>@StaticResource.Resource.suggestionFAQ</h2>


<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.question)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.answer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.rightt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.countt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.id_User)
        </th>
        @*<th></th>*@
    </tr>

    @foreach (var item in Model)
    {
        <tr onclick="window.location.href='/Manager/FAQ/DetailSuggestion/@item.id_FAQ'">
            <td >
                @Html.DisplayFor(modelItem => item.question)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.answer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.rightt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.countt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.id_User)
            </td>
            @*<td>
                @Html.ActionLink(StaticResource.Resource.detail, "DetailSuggestion", new { id = item.id_FAQ })
            </td>*@
        </tr>
    }

</table>
<div>
    <a class="icon" href="@Url.Action("Index", "FAQ")">
        <i class="fas fa-arrow-left"></i>
        <span class="tooltiptext">Back</span>
    </a>
</div>
<script type="text/javascript">
    setTimeout(function () { $('#notify').fadeOut(); }, 2000);
</script>
