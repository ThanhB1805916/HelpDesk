@model HelpDesk.Models.UserModel.FAQModelView

@{
    ViewBag.Title = "Detail";
    Layout = ViewBag.Layout;//"~/Views/Shared/_Layout.cshtml";

}

<div class="form-horizontal">
    <h2>@Model.question</h2>
    <p><strong>@StaticResource.Resource.right</strong>: @ViewData["right"] | <strong>@StaticResource.Resource.count</strong>: @Model.countt</p>
    <hr />
    <strong style="font-size: large">@StaticResource.Resource.answer</strong>
    <p class="col-md-offset-1">@Model.answer</p>
    <hr />
    <strong style="font-size: large">@StaticResource.Resource.troubleReference</strong>
    <br />
    <br />
   
</div>

<div class="col-md-offset-1" padding: 5px">
    <table class="table table-hover">
        <tr>
            <th>@StaticResource.Resource.id_trouble</th>
            <th>@StaticResource.Resource.techDes</th>
            <th>@StaticResource.Resource.dateFinish</th>
            <th>@StaticResource.Resource.describe</th>
        </tr>
        @for (int i = 0; i < Model.finishTime.Count; i++)
        {
             <tr onclick="window.location.href='/Trouble/DetailFAQ/@Model.id_DetailTech[i]'">
                 <td>
                     @Model.id_Trouble[i]
                 </td>
                 <td>
                     @ViewData["TechName_"+i]
                 </td>
                 <td>
                     @Model.finishTime[i] Day
                 </td>
                 <td>
                     @Model.describeFAQ[i]
                 </td>
             </tr> 
        }
    </table>
</div>

